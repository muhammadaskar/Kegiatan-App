<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailKegiatan"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="DETAIL KEGIATAN"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-light"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="8dp"
            android:text="Nama Kegiatan"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/edt_nama_kegiatan_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:hint="Contoh : Stand Up Comedy"
            android:textSize="16sp"
            android:inputType="text"
            android:backgroundTint="#5568D3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="8dp"
            android:text="Hari dan Tanggal"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/edt_tanggal_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:hint="Contoh : Senin 25 Maret 2019"
            android:textSize="16sp"
            android:inputType="text"
            android:backgroundTint="#5568D3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="8dp"
            android:text="Deskripsi"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/edt_deskripsi_detail"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginStart="5dp"
            android:textSize="18sp"
            android:ems="10"
            android:gravity="start|top"
            android:background="@drawable/bg_deskripsi"
            android:inputType="textMultiLine"
            android:backgroundTint="#ABD9F1"/>

        <Button
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="8dp"
            android:onClick="clickEdit"/>

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hapus"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="8dp"
            android:textColor="#E46868"
            android:onClick="clickDelete"/>


    </LinearLayout>

</LinearLayout>